<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.hcode.hoj.mapper.ExamProblemAnswerMapper">

    <resultMap id="map_ExamProblemAnswerList" type="top.hcode.hoj.pojo.entity.exam.ExamProblemAnswer">
        <id column="id" property="id"></id>
        <result column="problem_id" property="problemId"></result>
        <result column="content" property="content"></result>
        <result column="is_correct" property="isCorrect"></result>
        <result column="analysis" property="analysis"></result>
    </resultMap>
    <select id="getProblemAnswers" resultMap="map_ExamProblemAnswerList" parameterType="Long">
        SELECT epa.id, epa.problem_id, epa.content, epa.is_correct, epa.analysis
        FROM exam_problem_answer epa
        WHERE epa.problem_id = #{problemId}
    </select>


</mapper>